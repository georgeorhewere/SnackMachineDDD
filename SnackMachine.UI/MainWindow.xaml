<Window x:Class="SnackMachine.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnackMachine.UI"
        mc:Ignorable="d"
        Title="Snack Machine Demo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="btnBuySnack" Grid.Row="0" Content="Buy a Snack" HorizontalAlignment="Left" Margin="286,24,0,0" VerticalAlignment="Top" Width="114" Height="37"/>
        <Label x:Name="lblMoneyInserted" Grid.Row="0" Content="Money Inserted :" HorizontalAlignment="Left" Margin="260,66,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblMoneyInsertedVal" Grid.Row="0" Content="" HorizontalAlignment="Left" Margin="379,66,0,0" VerticalAlignment="Top"/>
        <Grid Grid.Row="1" Name="grdMoneyOptions">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnCent" Grid.Row="0" Grid.Column="0" Content="Put One Cent" HorizontalAlignment="Center" VerticalAlignment="Top" Width="114" Height="37" Margin="0,10"/>
            <Button x:Name="btnTenCent" Grid.Row="0" Grid.Column="1" Content="Put Ten Cent" HorizontalAlignment="Center" VerticalAlignment="Top" Width="114" Height="37" Margin="0,10"/>
            <Button x:Name="btnTwentyCent" Grid.Row="0" Grid.Column="2" Content="Put Twenty Cent" HorizontalAlignment="Center" VerticalAlignment="Top" Width="114" Height="37" Margin="0,10" />
            <Button x:Name="btnOneDollar" Grid.Row="1" Grid.Column="0" Content="Put One Dollar" HorizontalAlignment="Center" VerticalAlignment="Top" Width="114" Height="37" Margin="0,10"/>
            <Button x:Name="btnFiveDollar" Grid.Row="1" Grid.Column="1" Content="Put Five Dollars" HorizontalAlignment="Center" VerticalAlignment="Top" Width="114" Height="37" Margin="0,10"/>
            <Button x:Name="btnTwentDollar" Grid.Row="1" Grid.Column="2" Content="Put Twenty Dollars" HorizontalAlignment="Center" VerticalAlignment="Top" Width="114" Height="37" Margin="0,10"/>
            <Button x:Name="btnReturnMoney" Grid.Row="2" Content="Return Money" HorizontalAlignment="Center" VerticalAlignment="Top" Width="244" Height="37" Margin="10,10,10,0" Grid.Column="1"/>
        </Grid>

    </Grid>
</Window>
